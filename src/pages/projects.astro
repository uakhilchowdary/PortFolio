---
// Projects page for Windows 95/98 portfolio
import BaseLayout from '../layouts/BaseLayout.astro';

// Import config data for better SEO
import config from '../data/config.json';

const { pageName, statusText, activePage } = config.pages.projects;
---

<BaseLayout title={pageName} pageName={pageName} statusText={statusText} activePage={activePage} isContentPage={true}>
  <div class="content-area projects-override">
    <div class="section-header">
      <h2>Featured Projects</h2>
    </div>
    
    <!-- Error message placeholder -->
    <div id="error-message"></div>
    
    <!-- Projects container will be populated by projects-loader.js -->
    <div id="projects-container" class="projects-grid">
      <p>Loading projects data...</p>
    </div>
    
    <div class="page-navigation">
      <a href="/experience" class="page-nav-button">« Experience</a>
      <a href="/blogs" class="page-nav-button">Blogs »</a>
    </div>
  </div>
</BaseLayout>

<style>
  /* Project page specific styles - matching original */
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-xl);
  }
  
  .project-card {
    margin-bottom: var(--spacing-md);
    border: 1px solid var(--button-shadow);
    background-color: var(--content-bg);
    box-shadow: var(--border-raised-outer);
  }
  
  .project-title-bar {
    background-color: var(--title-bar-bg);
    color: white;
    padding: var(--spacing-xs) var(--spacing-sm);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .project-title-bar h3 {
    margin: 0;
    font-size: var(--font-size-sm);
    font-family: MSSerif;
    font-weight: normal;
    color: white;
  }
  
  .project-thumbnail-container {
    height: 150px;
    background-color: var(--surface-secondary);
    border-bottom: 1px solid var(--button-shadow);
    overflow: hidden;
  }
  
  .project-description {
    padding: var(--spacing-sm);
    background-color: var(--content-bg);
  }
  
  .project-description p {
    font-size: var(--font-size-xxs);
    line-height: 1.3;
    margin-bottom: 8px;
  }
  
  .tech-stack {
    display: flex;
    flex-wrap: wrap;
    gap: 5px;
    margin: var(--spacing-sm) 0;
  }
  
  .tech-tag {
    background-color: var(--surface-hover);
    font-family: MSSerif;
    font-size: 11px;
    padding: 3px 6px;
    border: 1px solid var(--button-shadow);
    color: var(--text-color);
  }
  
  .project-links {
    display: flex;
    gap: var(--spacing-sm);
    margin-top: var(--spacing-sm);
  }
  
  .link-button {
    background-color: var(--surface);
    box-shadow: var(--border-raised-outer), var(--border-raised-inner);
    padding: 4px 10px;
    font-family: MSSerif;
    font-size: var(--font-size-xxs);
    text-decoration: none;
    color: var(--text-color);
    cursor: pointer;
  }
  
  .link-button:active {
    box-shadow: var(--border-field);
  }
  
  .projects-override .projects-grid {
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  }
  
  .projects-override .project-title-bar h3 {
    color: white;
    font-family: MSSerif;
    font-weight: normal;
    font-size: var(--font-size-sm);
  }
  
  .projects-override .project-title-bar {
    justify-content: center;
  }
</style> 