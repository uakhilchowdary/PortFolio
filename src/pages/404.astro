---
import BaseLayout from '../layouts/BaseLayout.astro';
import ThemeSwitcher from '../components/ThemeSwitcher.astro';

const title = "Page Not Found";
const pageName = "Error 404";
const statusText = "Page not found. Please check the URL.";
---

<BaseLayout title={title} pageName={pageName} statusText={statusText} activePage="error" isContentPage={true}>
  <div class="content-area">
    <div class="error-container">
      <div class="error-icon">⚠️</div>
      <h2>404 - Page Not Found</h2>
      <p>The page you are looking for does not exist or has been moved.</p>
      <div class="error-actions">
        <a href="/" class="page-nav-button">Return to Home</a>
      </div>
    </div>
  </div>
  
  <ThemeSwitcher />
</BaseLayout>

<style>
  .error-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    text-align: center;
    height: 50vh;
  }
  
  .error-icon {
    font-size: 5rem;
    margin-bottom: 1rem;
  }
  
  .error-actions {
    margin-top: 2rem;
  }
</style> 